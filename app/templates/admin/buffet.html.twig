{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Buffet{% endblock %}

{% block head_stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/buffet.css') }}">
{% endblock %}

{% block main %}
    <div class="content-panel">
        <h2 class="h4 mb-3">Overview</h2>
        <p>Welcome to the Buffet admin. Use the menu to manage dishes and review updates.</p>
        <div class="buffet-layout mt-3">
            <div class="buffet-cupboard">
                <div class="shelf" style="top: 76px; height: 155px; width: 964px;"></div>
                <div class="shelf" style="top: 250px; height: 179px; width: 964px;"></div>
                <div class="shelf" style="top: 451px; height: 165px; width: 964px;"></div>
            </div>
            <div class="buffet-items">
                <img src="{{ asset('images/bowl.png') }}" alt="bowl">
                <img src="{{ asset('images/dish.png') }}" alt="dish">
                <img src="{{ asset('images/soup.png') }}" alt="soup">
                <img src="{{ asset('images/cup.png') }}" alt="cup">
            </div>
        </div>
    </div>
{% endblock %}
